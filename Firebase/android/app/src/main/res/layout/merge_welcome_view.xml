<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/user_avatar"
    style="@style/Welcome.SenderImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/welcome_message_view"
    style="@style/Welcome.Message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <TextView
    style="@style/Welcome.Message.Static"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/enjoy_the_awesomness" />

  <TextView
    android:id="@+id/proceed_button"
    style="@style/Welcome.ProceedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/start_chatting" />

</merge>
